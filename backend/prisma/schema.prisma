generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Client {
  id        Int     @id @default(autoincrement())
  name      String
  cin       String  @unique
  phone     String
  phoneCode String
  address   String?
  city      City    @relation(fields: [cityId], references: [id])
  cityId    Int
  country   Country
  orders    Order[]

  @@unique([phoneCode, phone])
}

model Order {
  id                 Int      @id @default(autoincrement())
  parcelNumber       String
  parcelCode         String   @unique
  recipientName      String
  recipientCin       String   @unique
  recipientCityId    Int
  recipientCity      City     @relation(fields: [recipientCityId], references: [id])
  recipientPhone     String
  recipientPhoneCode String
  homeDelivery       Boolean
  date               DateTime @default(now())
  paid               Boolean
  paidAmount         Float
  nParcels           Int
  pics               Pic[]
  productType        String
  weight             Float
  statuses           Status[]
  shipperId          Int
  shipper            Client   @relation(fields: [shipperId], references: [id])

  @@index([parcelCode])
}

model Status {
  id      Int        @id @default(autoincrement())
  orderId Int
  order   Order      @relation(fields: [orderId], references: [id])
  name    StatusEnum 
  date    DateTime   @default(now())
}

model Pic {
  id      Int    @id @default(autoincrement())
  url     String
  order   Order  @relation(fields: [orderId], references: [id])
  orderId Int
}

model City {
  id      Int      @id @default(autoincrement())
  name    String
  clients Client[]
  country Country
  orders  Order[]
}

enum Country {
  Morocco
  France
}

enum StatusEnum {
  origin
  inTransit
  inStock
  delivered
  notDelivered
}
